% --- verbal statement settings ---
\tcbset{enhanced,breakable}
% --- environment for verbal statements ---
\newtcolorbox{verbal}{%
  breakable,
  boxrule=0.2pt,
  colback=white,
  coltext=gray,  % etwas dunkler als Linie
  left=1em, right=1ex,      % leichter Einzug
  top=0.4ex, bottom=0.2ex,  % dezente Innenabstände
  borderline west={2pt}{0pt}{gray}, % linker vertikaler Strich
  before skip=\baselineskip,
  after  skip=\baselineskip
}
% --- verbal side by side ---
\newtcolorbox{verbal_sidebyside}[1][]{%
  enhanced,
  breakable,
  boxrule=0.2pt,
  colback=white,
  coltext=gray,
  left=1em, right=1ex,
  top=0.4ex, bottom=0.2ex,
  borderline west={2pt}{0pt}{gray},
  before skip=\baselineskip,
  after  skip=\baselineskip,
  sidebyside,
  sidebyside align=center,
  sidebyside gap=1em,
  righthand width=#1,
}

% --- environment for definitions ---
\newcommand{\DefinitionColor}{blue}
\newtcolorbox{definition}[1]{%
  breakable,
  boxrule=0.2pt,
  colback=blue!6!white,
  coltext=black,
  left=1em, right=1ex, 
  top=0.4ex, bottom=0.2ex,
  borderline west={2pt}{0pt}{\DefinitionColor},
  before skip=\baselineskip,
  after  skip=\baselineskip,
  title=\textsc{{Definition:} #1},
  fonttitle=\bfseries,
  colbacktitle=\DefinitionColor!10!white,
  coltitle=\DefinitionColor!80!black,
}

\newcommand{\quickdef}[1]{\textbf{\textcolor{\DefinitionColor}{#1}}}

% --- red box for important information ---
\newtcolorbox{important}{%
  breakable,
  boxrule=0.2pt,
  colback=red!6!white,
  coltext=red,  % etwas dunkler als Linie
  left=1em, right=1ex,      % leichter Einzug
  top=0.4ex, bottom=0.2ex,  % dezente Innenabstände
  borderline west={2pt}{0pt}{red}, % linker vertikaler Strich
  before skip=\baselineskip,
  after  skip=\baselineskip,
  before upper=\centering\boldmath\setlength{\abovedisplayskip}{0pt}\setlength{\abovedisplayshortskip}{0pt}
}

% --- new lecture environment ---
\def\@lecture{}%
\newcommand{\lecture}[3][]{%
    \ifthenelse{\equal{#1}{}}{%
        \def\@lecture{Vorlesung #2}%
    }{%
        \def\@lecture{Vorlesung #2 #1}%
    }
    \subsection*{\@lecture}
    \marginpar{\small\textsf{\mbox{#3}}}
}